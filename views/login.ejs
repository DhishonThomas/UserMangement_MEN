                  <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                </div> -->
  
              </div>
  
              <div>
                <p class="mb-0">Don't have an account? <a href="/sign" class="text-black-50 fw-bold">Sign Up</a>
                </p>
              </div>
           
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>
